<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Fluent="clr-namespace:Fluent"
                    xmlns:options="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    mc:Ignorable="options d">

    <!-- Theme base colors -->
    <Color x:Key="{x:Static Fluent:MetroColors.ThemeColorKey}">#FF2B579A</Color>
    
    <Color x:Key="Fluent.Ribbon.Colors.HighlightColor">#FF086F9E</Color>
    <Color x:Key="Fluent.Ribbon.Colors.AccentBaseColor">#FF2B579A</Color>
    <!--80%-->
    <Color x:Key="Fluent.Ribbon.Colors.AccentColor80">#CC2B579A</Color>
    <!--60%-->
    <Color x:Key="Fluent.Ribbon.Colors.AccentColor60">#992B579A</Color>
    <!--40%-->
    <Color x:Key="Fluent.Ribbon.Colors.AccentColor40">#662B579A</Color>
    <!--20%-->
    <Color x:Key="Fluent.Ribbon.Colors.AccentColor20">#332B579A</Color>

    <!-- Base colors -->
    <Color x:Key="BlackColor">#FF000000</Color>
    <Color x:Key="WhiteColor">#FFFFFFFF</Color>
    <Color x:Key="Gray1">#FF333333</Color>
    <Color x:Key="Gray2">#FF7F7F7F</Color>
    <Color x:Key="Gray3">#FF9D9D9D</Color>
    <Color x:Key="Gray4">#FFA59F93</Color>
    <Color x:Key="Gray5">#FFB9B9B9</Color>
    <Color x:Key="Gray6">#FFCCCCCC</Color>
    <Color x:Key="Gray7">#FFD8D8D9</Color>
    <Color x:Key="Gray8">#FFE0E0E0</Color>
    <Color x:Key="Gray9">#5EC9C9C9</Color>
    <Color x:Key="Gray10">#FFF7F7F7</Color>
    
    <Color x:Key="TransparentWhiteColor">#00FFFFFF</Color>

    <!-- UNIVERSAL CONTROL BRUSHES -->
    <SolidColorBrush x:Key="TransparentBrush"
                     Color="#00000000" />

    <SolidColorBrush x:Key="WhiteBrush"
                     Color="{StaticResource WhiteColor}" />
    <SolidColorBrush x:Key="BlackBrush"
                     Color="{StaticResource BlackColor}" />
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.LabelTextBrush" Color="{StaticResource BlackColor}" options:Freeze="True" />    
    
    <SolidColorBrush x:Key="TransparentWhiteBrush"
                     Color="{StaticResource TransparentWhiteColor}" />
    
    <SolidColorBrush x:Key="RibbonThemeColorBrush"
                     Color="{StaticResource Fluent.Ribbon.Colors.AccentBaseColor}" />
    
    <Color x:Key="Fluent.Ribbon.Brushes.IdealForegroundColor">White</Color>
    <SolidColorBrush x:Key="IdealForegroundColorBrush" Color="{StaticResource Fluent.Ribbon.Brushes.IdealForegroundColor}" options:Freeze="True" />
    <SolidColorBrush x:Key="IdealForegroundDisabledBrush" Color="{StaticResource Fluent.Ribbon.Brushes.IdealForegroundColor}" Opacity="0.4" options:Freeze="True" />
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.AccentSelectedColorBrush" Color="{StaticResource Fluent.Ribbon.Brushes.IdealForegroundColor}" options:Freeze="True" />    
    
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.HighlightBrush" Color="{StaticResource Fluent.Ribbon.Colors.HighlightColor}" options:Freeze="True" />
    
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.AccentBaseColorBrush" Color="{StaticResource Fluent.Ribbon.Colors.AccentBaseColor}" options:Freeze="True" />
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.AccentColorBrush80" Color="{StaticResource Fluent.Ribbon.Colors.AccentColor80}" options:Freeze="True" />
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.AccentColorBrush60" Color="{StaticResource Fluent.Ribbon.Colors.AccentColor60}" options:Freeze="True" />
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.AccentColorBrush40" Color="{StaticResource Fluent.Ribbon.Colors.AccentColor40}" options:Freeze="True" />
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.AccentColorBrush20" Color="{StaticResource Fluent.Ribbon.Colors.AccentColor20}" options:Freeze="True" />
    
    <SolidColorBrush x:Key="GrayBrush1" Color="{StaticResource Gray1}" options:Freeze="True" />
    <SolidColorBrush x:Key="GrayBrush2" Color="{StaticResource Gray2}" options:Freeze="True" />
    <SolidColorBrush x:Key="GrayBrush3" Color="{StaticResource Gray3}" options:Freeze="True" />
    <SolidColorBrush x:Key="GrayBrush4" Color="{StaticResource Gray4}" options:Freeze="True" />
    <SolidColorBrush x:Key="GrayBrush5" Color="{StaticResource Gray5}" options:Freeze="True" />
    <SolidColorBrush x:Key="GrayBrush6" Color="{StaticResource Gray6}" options:Freeze="True" />
    <SolidColorBrush x:Key="GrayBrush7" Color="{StaticResource Gray7}" options:Freeze="True" />
    <SolidColorBrush x:Key="GrayBrush8" Color="{StaticResource Gray8}" options:Freeze="True" />
    <SolidColorBrush x:Key="GrayBrush9" Color="{StaticResource Gray9}" options:Freeze="True" />
    <SolidColorBrush x:Key="GrayBrush10" Color="{StaticResource Gray10}" options:Freeze="True" />

    <SolidColorBrush x:Key="TextBoxBorderBrush" Color="{StaticResource Gray6}" options:Freeze="True" />
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.Control.BorderBrush" Color="{StaticResource Gray6}" options:Freeze="True" />
    <SolidColorBrush x:Key="TextBoxMouseOverInnerBorderBrush" Color="{StaticResource BlackColor}" options:Freeze="True" />
    <SolidColorBrush x:Key="TextBoxFocusBorderBrush" Color="{StaticResource BlackColor}" options:Freeze="True" />
    <SolidColorBrush x:Key="TextBoxMouseOverBorderBrush" Color="{StaticResource Gray2}" options:Freeze="True" />

    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.Button.MouseOver.BorderBrush" Color="{StaticResource Fluent.Ribbon.Colors.AccentColor40}" options:Freeze="True" />
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.Button.MouseOver.Background" Color="{StaticResource Fluent.Ribbon.Colors.AccentColor20}" options:Freeze="True" />
    
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.Button.Pressed.BorderBrush" Color="{StaticResource Fluent.Ribbon.Colors.AccentColor60}" options:Freeze="True" />
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.Button.Pressed.Background" Color="{StaticResource Fluent.Ribbon.Colors.AccentColor40}" options:Freeze="True" />
    
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.ComboBox.MouseOver.BorderBrush" Color="{StaticResource Fluent.Ribbon.Colors.BlackColor}" options:Freeze="True" />
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.ComboBox.MouseOver.Background" Color="{StaticResource Fluent.Ribbon.Colors.BlackColor}" options:Freeze="True" />

    <!--Backstage-->   
    <SolidColorBrush x:Key="BackstageGalleryItemHoverBackgroundBrush"
                     Color="{DynamicResource {x:Static Fluent:MetroColors.ThemeColorKey}}"
                     Opacity="0.3" />
    
    <SolidColorBrush x:Key="BackstageGalleryItemSelectedBackgroundBrush"
                     Color="{DynamicResource {x:Static Fluent:MetroColors.ThemeColorKey}}"
                     Opacity="0.5" />
    
    <SolidColorBrush x:Key="BackstageToggleButtonCheckedBackgroundBrush"
                     Color="{DynamicResource {x:Static Fluent:MetroColors.ThemeColorKey}}"
                     Opacity="0.2" />

    <SolidColorBrush x:Key="BackstageToggleButtonCheckedBorderBrush"
                     Color="{DynamicResource {x:Static Fluent:MetroColors.ThemeColorKey}}"
                     Opacity="0.3" />

    <!-- Button -->   
    <SolidColorBrush x:Key="ButtonHoverInnerBackgroundBrush"
                     Color="{DynamicResource {x:Static Fluent:MetroColors.ThemeColorKey}}"
                     Opacity="0.12" />

    <SolidColorBrush x:Key="ButtonHoverInnerBorderBrush"
                     Color="{DynamicResource {x:Static Fluent:MetroColors.ThemeColorKey}}"
                     Opacity="0.12" />

    <SolidColorBrush x:Key="ButtonPressedInnerBackgroundBrush"
                     Color="{DynamicResource {x:Static Fluent:MetroColors.ThemeColorKey}}"
                     Opacity="0.3" />

    <SolidColorBrush x:Key="ButtonPressedInnerBorderBrush"
                     Color="{DynamicResource {x:Static Fluent:MetroColors.ThemeColorKey}}"
                     Opacity="0.3" />

    <SolidColorBrush x:Key="CloseButtonHoverBackgroundBrush"
                     Color="#E81123" />

    <SolidColorBrush x:Key="CloseButtonPressedBackgroundBrush"
                     Color="#F1707A" />

    <!-- CheckBox -->
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.CheckBox.BorderBrush" Color="{StaticResource Gray3}" options:Freeze="True" />
    <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.CheckBox.Background" Color="{StaticResource Gray10}" options:Freeze="True" />       

    <!-- Gallery -->   
    <SolidColorBrush x:Key="GalleryHeaderBackgroundBrush"
                     Color="{DynamicResource Gray3}" />

    <SolidColorBrush x:Key="GalleryBackgroundBrush"
                     Color="{StaticResource WhiteColor}" />

    <!-- KeyTip -->
    <SolidColorBrush x:Key="KeyTipBackgroundBrush"
                     Color="#FF525252" />
    
    <SolidColorBrush x:Key="KeyTipBorderBrush"
                     Color="#FF767676" />

    <!-- MenuItem -->
    <SolidColorBrush x:Key="MenuItemBackground"
                     Color="#00000000" />
    
    <SolidColorBrush x:Key="MenuItemCheckBoxBackgroundBrush"
                     Color="#FFFCF1C2" />
    
    <SolidColorBrush x:Key="MenuItemCheckBoxBorderBrush"
                     Color="#FFF29536" />
    
    <!-- ContextMenu -->
    <SolidColorBrush x:Key="ContextMenuBarBackgroundBrush"
                     Color="White" />
    
    <SolidColorBrush x:Key="ContextMenuBarBorderBrush"
                     Color="#FFA7ABB0" />
    
    <SolidColorBrush x:Key="ContextMenuLineBrush"
                     Color="#FFE2E4E7" />

    <SolidColorBrush x:Key="ContextMenuSeparatorBrush"
                     Color="#FFE0E3E6" />

    <SolidColorBrush x:Key="ContextMenuBarResizeBorderBrush"
                     Color="#FFDDE7EE" />
    
    <LinearGradientBrush x:Key="ContextMenuBarResizeBackgoundBrush"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="White"
                      Offset="0" />
        <GradientStop Color="#FFD8DBDF"
                      Offset="1" />
        <GradientStop Color="#FFF2F4F5"
                      Offset="0.529" />
    </LinearGradientBrush>

    <!-- ScrollViewer -->
    <SolidColorBrush x:Key="ScrollViewerButtonBorderBrush"
                     Color="#FF79848C" />

    <LinearGradientBrush x:Key="ScrollViewerButtonBackgroundBrush"
                         EndPoint="0.5,1"
                         StartPoint="0.5,0">
        <GradientStop Color="White"
                      Offset="0" />
        <GradientStop Color="#FFE8EBEF"
                      Offset="1" />
    </LinearGradientBrush>

    <!-- Ribbon -->
    <SolidColorBrush x:Key="RibbonTopBorderBrush"
                     Color="#FFE1E1E1" />
    
    <SolidColorBrush x:Key="RibbonBackgoundBrush"
                     Color="White" />
    
    <SolidColorBrush x:Key="ActiveTabBackgroundBrush"
                     Color="White" />
    
    <SolidColorBrush x:Key="DefaultFontBrush"
                     Color="#FF444444" />
    
    <SolidColorBrush x:Key="BackstageFontBrush"
                     Color="White" />
    
    <SolidColorBrush x:Key="TabItemSelectedFontBrush"
                     Color="#FF212121" />
    
    <SolidColorBrush x:Key="TabItemFontBrush"
                     Color="#FF212121" />
    
    <SolidColorBrush x:Key="RibbonSeparatorBrush"
                     Color="#FFE1E1E1" />

    <!-- Groups -->
    <SolidColorBrush x:Key="GroupSeparatorBrush"
                     Color="#FFE1E1E1" />
    
    <SolidColorBrush x:Key="GroupHoverBrush"
                     Color="#FFF7F7F7" />
    
    <SolidColorBrush x:Key="GroupHighlightBrush"
                     Color="#FFF0F0F0" />

    <!-- GroupBox -->
    <SolidColorBrush x:Key="GroupBoxFontBrush"
                     Color="#FF666D7C" />
    
    <SolidColorBrush x:Key="GroupBoxSeparatorBorderBrush"
                     Color="White" />
    
    <SolidColorBrush x:Key="GroupBoxSeparatorBackgroundBrush"
                     Color="#FFE1E1E1" />

    <!-- Scroll-Buttons -->
    <SolidColorBrush x:Key="ScrollButtonDefaultBorderBrush"
                     Color="#FFABABAB" />
    
    <SolidColorBrush x:Key="ScrollButtonDefaultBackgroundBrush"
                     Color="White" />
    
    <SolidColorBrush x:Key="ScrollButtonHoverBorderBrush"
                     Color="#FF777777" />
    
    <SolidColorBrush x:Key="ScrollButtonHoverBackgroundBrush"
                     Color="White" />
    
    <SolidColorBrush x:Key="ScrollButtonPressedBorderBrush"
                     Color="#FF777777" />

    <SolidColorBrush x:Key="ScrollButtonPressedBackgroundBrush"
                     Color="#FFF0F0F0" />

    <SolidColorBrush x:Key="ScrollBackgroundBrush"
                     Color="#FFEDEDED" />
    <SolidColorBrush x:Key="ScrollVerticalBackgroundBrush"
                     Color="#FFEDEDED" />

    <!-- TextBox -->   
    <SolidColorBrush x:Key="TextBoxBackgroundBrush"
                     Color="White" />
    
    <SolidColorBrush x:Key="TextBoxHoverBackgroundBrush"
                     Color="White" />
       
    <SolidColorBrush x:Key="TextBoxHoverBorderBrush"
                     Color="#FFBBBFC4" />
    
    <SolidColorBrush x:Key="TextBoxDisabledBackgroundBrush"
                     Color="#FFFAFAFA" />
    
    <SolidColorBrush x:Key="TextBoxDisabledBorderBrush"
                     Color="#FFE4E7EB" />

    <!-- Window -->
    <SolidColorBrush x:Key="WindowContentBorderBrush"
                     Color="#FF878C92" />

    <!-- QuickAccessToolBar -->
    <SolidColorBrush x:Key="QuickAccessToolbarPopupBackgrondBrush"
                     Color="#FFE9EDF1" />
</ResourceDictionary>
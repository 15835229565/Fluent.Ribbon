    Title="Window1" Height="345" Width="880" mc:Ignorable="d">
  <Window.Background>
    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
      <GradientStop Color="#FFEBEDF0" Offset="0"/>
      <GradientStop Color="#FFBABEC2" Offset="1"/>
    </LinearGradientBrush>
  </Window.Background>
  <Grid>
    <Fluent:Ribbon VerticalAlignment="Top" Style="{DynamicResource RibbonStyle}">
      <Fluent:Ribbon.Groups>
        <Fluent:RibbonContextualTabGroup x:Name="tabGroup1" Style="{DynamicResource RibbonContextualTabGroupStyle}" BorderBrush="Magenta" Background="Purple"/>
        <Fluent:RibbonContextualTabGroup x:Name="tabGroup2" Style="{DynamicResource RibbonContextualTabGroupStyle}" BorderBrush="Green" Background="Lime"/>

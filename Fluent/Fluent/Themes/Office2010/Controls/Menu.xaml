<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style x:Key="ContentMenuItemStyle" TargetType="{x:Type MenuItem}">
		<Setter Property="Template" Value="{DynamicResource ContentMenuItemControlTemplate}"/>
	</Style>
	<ControlTemplate x:Key="ContentMenuItemControlTemplate" TargetType="{x:Type MenuItem}">
		<ContentPresenter ContentSource="Header" Width="Auto" Height="Auto"/>
	</ControlTemplate>
    
</ResourceDictionary>
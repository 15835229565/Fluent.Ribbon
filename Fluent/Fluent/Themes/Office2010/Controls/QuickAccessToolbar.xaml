<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:Fluent="clr-namespace:Fluent">
    <Style x:Key="QuickAccessToolbarStyle" TargetType="{x:Type Fluent:QuickAccessToolbar}">
    	<Setter Property="Template" Value="{DynamicResource QuickAccessToolbarControlTemplate}"/>
    </Style>
    <ControlTemplate x:Key="QuickAccessToolbarControlTemplate" TargetType="{x:Type Fluent:QuickAccessToolbar}">
    	<DockPanel>
    		<Fluent:DropDownButton x:Name="PART_MenuDownButton" Width="Auto" Content="M" HorizontalAlignment="Right" VerticalAlignment="Stretch" Popup="{Binding ElementName=PART_MenuPopup, Mode=OneWay}" Style="{DynamicResource RibbonDropDownButtonStyle}" Height="Auto" Fluent:RibbonControl.SizeDefinition="Small" DockPanel.Dock="Right"/>
    		<Fluent:DropDownButton x:Name="PART_ToolbarDownButton" HorizontalAlignment="Right" Width="Auto" Content="P" Visibility="Collapsed" VerticalAlignment="Stretch" Popup="{Binding ElementName=PART_ToolbarPopup, Mode=OneWay}" Style="{DynamicResource RibbonDropDownButtonStyle}" Height="Auto" Fluent:RibbonControl.SizeDefinition="Small" DockPanel.Dock="Right"/>
    		<Rectangle Fill="Black" Stroke="White" RadiusX="1" RadiusY="1" HorizontalAlignment="Right" Width="3" Height="Auto" Opacity="0.5" VerticalAlignment="Stretch" DockPanel.Dock="Right"/>
    		<Rectangle Fill="Black" Stroke="White" Width="3" Height="Auto" RadiusX="1" RadiusY="1" HorizontalAlignment="Left" Opacity="0.5" VerticalAlignment="Stretch" DockPanel.Dock="Left"/>
    		<ToolBarPanel x:Name="PART_ToolBarPanel" Width="Auto" Height="Auto" IsItemsHost="True" VerticalAlignment="Stretch"/>
    		<Popup x:Name="PART_ToolbarPopup" PlacementTarget="{Binding ElementName=PART_ToolbarDownButton, Mode=OneWay}" IsOpen="{Binding IsOverflowOpen, RelativeSource={RelativeSource TemplatedParent}}" PopupAnimation="Fade" AllowsTransparency="True">
    			<StackPanel Width="Auto" Orientation="Horizontal" Background="#FF0043FF">
    				<ToolBarOverflowPanel x:Name="PART_ToolBarOverflowPanel" HorizontalAlignment="Left" Width="Auto" Height="Auto"/>
    				<Fluent:DropDownButton x:Name="PART_MenuDownPopupButton" Width="22" Content="M" HorizontalAlignment="Right" VerticalAlignment="Stretch" Popup="{Binding ElementName=PART_MenuPopup, Mode=OneWay}" Style="{DynamicResource RibbonDropDownButtonStyle}" Height="22"/>
    			</StackPanel>
    		</Popup>
    		<Popup x:Name="PART_MenuPopup" PlacementTarget="{Binding ElementName=PART_MenuDownButton, Mode=OneWay}" Width="Auto" Height="Auto" PopupAnimation="Fade" AllowsTransparency="True">
    			<Menu x:Name="PART_Menu" Width="100" Height="110"/>
    		</Popup>
    	</DockPanel>
    	<ControlTemplate.Triggers>
    		<Trigger Property="HasOverflowItems" Value="True">
    			<Setter Property="Visibility" TargetName="PART_ToolbarDownButton" Value="Visible"/>
    			<Setter Property="Visibility" TargetName="PART_MenuDownButton" Value="Collapsed"/>
    			<Setter Property="PlacementTarget" TargetName="PART_MenuPopup" Value="{Binding ElementName=PART_MenuDownPopupButton, Mode=OneWay}"/>
    		</Trigger>
    	</ControlTemplate.Triggers>
    </ControlTemplate>
</ResourceDictionary>
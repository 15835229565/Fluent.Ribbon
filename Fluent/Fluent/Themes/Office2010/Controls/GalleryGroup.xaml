<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Fluent="clr-namespace:Fluent" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d">
  <Style x:Key="GalleryGroupStyle" TargetType="{x:Type Fluent:GalleryGroup}">
  	<Setter Property="Template">
		<Setter.Value>
			<ControlTemplate TargetType="{x:Type Fluent:GalleryGroup}">
				<StackPanel VerticalAlignment="Top">
					<Border Height="20" BorderBrush="{x:Null}" BorderThickness="1" Background="#FFF0F2F5">
						<TextBlock Text="{TemplateBinding Header}" TextWrapping="Wrap" VerticalAlignment="Center" Margin="8,2" FontWeight="Bold"/>
					</Border>
					<Grid Margin="0" Height="Auto">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto"/>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>
						<ContentPresenter x:Name="contentPresenter" Width="Auto" Height="Auto" ContentSource="Icon" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" d:LayoutOverrides="Height" Margin="0,0,9,0"/>
						<Border Height="Auto" d:LayoutOverrides="Height" Background="White" HorizontalAlignment="Stretch" Margin="0,0,9,0" Grid.Column="1">
							<WrapPanel Orientation="Horizontal" IsItemsHost="True" Width="Auto" Background="{x:Null}" Margin="0,0,0,2"/>
						</Border>
					</Grid>
				</StackPanel>
				<ControlTemplate.Triggers>
					<Trigger Property="HasIcon" Value="False">
						<Setter Property="Visibility" TargetName="contentPresenter" Value="Collapsed"/>
					</Trigger>
				</ControlTemplate.Triggers>
			</ControlTemplate>
		</Setter.Value>		
	</Setter>
  </Style>
</ResourceDictionary>